                </TabItem.Header>
                <local:PasswordsScreen x:Name="PasswordsScreenView"/>
            </TabItem>
            <TabItem Style="{DynamicResource MainTabItemStyle}" x:Name="Settings">
                <TabItem.Header>
                    <StackPanel>
                        <Viewbox>
